contract ADSCoin {
    
    using SafeMath for uint;
    
    // variables
    string  public name = "ADS Coin";
    string  public symbol = "ADS";
    uint256 public decimals = 18;
    uint256 public totalSupply;
    
    // track balances should be immutable
    // should be exposed for public view
    // unit256 must be positive
    mapping(address => uint256) public balanceOf;
    
    // track how much the exchage is allowed to spend
    // first address is the deployer second address is for allowance
    mapping(address => mapping(address => uint256)) public allowance;
    
    // send tokens // events
    event Transfer(address indexed from, address indexed to, uint256 value);
    // approve tokens for exchange
    event Approval(address indexed owner, address indexed spender, uint256 value);
    
    constructor() public {
        totalSupply = 1000000 * (10 ** decimals);  // 1000000.0000000000000000000
        balanceOf[msg.sender] = totalSupply;
    }
    
    // transfer token
    function transfer(address _to, uint256 _value) public returns (bool success) {
      // check if sender has eoungh balances
      require(balanceOf[msg.sender] >= _value);
      _transfer(msg.sender, _to, _value);
      return true;
    }
    
    // internal function only
    function _transfer(address _from, address _to, uint256 _value) internal {
      // check if sender has eoungh balances
      // reduce senders balances
      // increase receivers balances
      // emits trasnfer event
      require(_to != address(0));
      balanceOf[_from] = balanceOf[_from].sub(_value);
      balanceOf[_to] = balanceOf[_to].add(_value);
      emit Transfer(_from, _to, _value);
    }
    
    // Approve tokens
    function approve(address _spender, uint256 _value) public returns (bool success) {
      require(_spender != address(0));
      allowance[msg.sender][_spender] = _value;
      emit Approval(msg.sender, _spender, _value);
      return true;
    }
    
    // Transfer from
    function transferFrom(address _from, address _to, uint256 _value) public returns (bool success) {
      // check value of the tokens
      require(_value <= balanceOf[_from]);
      require(_value <= allowance[_from][msg.sender]);
      // rest allowance balance to zero
      allowance[_from][msg.sender] = allowance[_from][msg.sender].sub(_value);
      _transfer(_from, _to, _value);
      return true;
    }
    
}